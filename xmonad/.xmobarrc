Config { font = "xft:Iosevka:size=12"
       , bgColor = "black"
       , fgColor = "white"
       , position = TopW C 90
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Swap [] 10
                    , Run Date "%a %Y-%m-%d %H:%M:%S" "date" 10
                    , Run Battery [ "-t"
                                  , "<timeleft>"
                                  , "-L", "50"
                                  , "-H", "75"
                                  , "-h", "green"
                                  , "-n", "yell"
                                  , "-l", "red" ] 10
                    , Run XMonadLog]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %XMonadLog% }{ <box width=1> %battery% </box> %date% " }
